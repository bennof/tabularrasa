{{!< default}}

{{#post}}
{{!-- Everything inside the #post tags pulls data from the post --}}
<!-- header area -->
{{#if feature_image}}
<header class="hero is-medium is-primary is-bold " style="background: {{img_url feature_image}} center center; background-size:cover; ">
{{else}}
<header class="hero is-medium is-primary is-bold ">
{{/if}}
  <div class="hero-body">
    <div class="container">
      <h1 class="title">{{title}}</h1>
      <h2 class="subtitle">{{date format="MMMM D, YYYY"}}</h2>
      {{#if custom_excerpt}}
          <summary>{{custom_excerpt}}</summary>
      {{/if}}
    </div>
  </div>
</header>

<article class="section">
  <section class="content">
    {{content}}
  </section>
</article>


{{!-- Presenter mode --}}
<script>
  var TIMEOUT = (typeof TIMEOUT === 'undefined') ? 5000 : TIMEOUT;
  var URL_PREV = "{{#prev_post}}{{url}}{{/prev_post}}";
  var URL_NEXT = "{{#next_post}}{{url}}{{/next_post}}";
  var QUERY = (window.location.search.substr(1)).split("&");
  if(QUERY.indexOf("presenter")>-1){
    setTimeout(function(){
      if(QUERY.indexOf("rewind")>-1) {
        if(URL_PREV=="")
          window.location=URL_NEXT+"?presenter";
        else
          window.location=URL_PREV+"?rewind&presenter";
      } else {
        if(URL_NEXT=="")
          window.location=URL_PREV+"?rewind&presenter";
        else
          window.location=URL_NEXT+"?presenter";
      }
    },TIMEOUT);
  }
</script>




{{!-- Email subscribe form at the bottom of the page
{{#if @labs.subscribers}}
<section class="subscribe-form">
    <h3 class="subscribe-form-title">Subscribe to {{@site.title}}</h3>
    <p>Get the latest posts delivered right to your inbox</p>
    {{subscribe_form placeholder="youremail@example.com"}}
</section>
{{/if}}
--}}

<section class="author nav-spacer">
    {{#foreach authors}}
        <article>
            <h3><a href="{{url}}">
                {{#if profile_image}}
                    <img class="icon" src="{{profile_image}}" alt="Image {{name}}" />
                {{/if}}
                {{name}}
            </a></h3>
            {{#if bio}}
                <p>{{bio}}</p>
            {{else}}
                <p>Read more posts by this author.</p>
            {{/if}}
        </article>
    {{/foreach}}
</section>

