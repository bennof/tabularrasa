{{!< default}}
{{!-- Featured Post on main index only--}}

{{#is "home"}}
{{!-- header area --}}
<header class="hero is-medium is-primary is-bold " style="background: url('{{img_url @site.cover_image}}') center center; background-size:cover; ">
  <div class="hero-body">
    <div class="container">
      {{#if @site.logo}}
      <img class="site-logo" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
      {{else}}
      <h1 class="title">{{name}}</h1>
      {{/if}}
      <summary>{{@site.description}}</summary>
    </div>
  </div>
</header>
{{/is}}

{{!-- All Posts --}}
<article class="section">
  <div class="columns is-multiline">
    {{#foreach posts}}
    <div class="column is-one-third">
      <div class="card">
        {{#if feature_image}}
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="{{img_url feature_image}}" alt="{{title}}">
          </figure>
        </div>
        {{/if}}

        {{!-- Content --}}
        <div class="card-content">
          <div class="media">
            <div class="media-content">

            </div>
          </div>
          <div class="content">
            <h1>{{title}}</h1>
            <small class="date">{{date format="MMMM D, YYYY"}}</small>

            {{excerpt words="33"}}
            <a href="{{url}}">Read more</a>
          </div>
        </div>
      </div>
    </div>
    {{/foreach}}
  </div>
</article>

{{!-- Pagination --}}
{{pagination}}
